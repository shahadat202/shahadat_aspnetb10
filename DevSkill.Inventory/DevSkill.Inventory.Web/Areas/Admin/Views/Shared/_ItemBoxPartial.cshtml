@model Product
@using DevSkill.Inventory.Domain.Entities

<div class="col-md-4 d-flex justify-content-center">
    <a asp-area="Admin" asp-controller="Product" asp-action="Update" class="card item-box @if(ViewBag.IsNewItem == true) {
    <text>new-item-highlight</text>}">
        <img src="@Model.Image" alt="@Model.Title" class="card-img-top" />
        <h5 class="card-title">@Model.Title</h5>
        <div class="card-body">
            <!-- First Line: Item Title -->
            <!-- Second Line: Quantity and Price -->
            <div class="item-info">
                <span class="item-quantity">Quantity: @Model.Quantity</span>
                <span class="divider">|</span>
                <span class="item-price">Price: @Model.Price $</span>
            </div>

            <!-- Third Line: Tag Icon and Tag -->
            <div class="item-tag">
                <i class="fas fa-tag"></i> @Model.Tags
            </div>
        </div>
        <input type="checkbox" class="checkbox-delete" id="deleteCheckbox" />
    </a>
</div>

<style>
    /* Style for the Item Box */
    .item-box {
        height: 270px;
        width: 230px;
        margin-bottom: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease-in-out;
        background-color: #fff;
    }

        .item-box:hover {
            transform: scale(1.05);
        }

        .item-box img {
            height: 150px;
            width: 100%;
            object-fit: cover;
        }

        .item-box .card-body {
            padding: 10px;
        }

    /* Checkbox for delete */
    .checkbox-delete {
        position: absolute;
        top: 10px;
        right: 10px;
        display: none; /* Initially hidden */
    }

    .item-box:hover .checkbox-delete {
        display: block;
    }

    /*  Item Title  */
    .item-box h5 {
        font-size: 16px;
        margin: 5px 0px 8px 10px;
        font-weight: bold;
        color: #333;
    }

    /*  Quantity and Price  */
    .item-info {
        align-items: center;
        font-size: 14px;
        margin-bottom: 20px;
    }

    .item-quantity, .item-price {
        font-size: 14px;
        color: #666;
    }

    .divider {
        margin: 0px 5px;
        color: #999;
    }

    /*  Tag Icon and Tag  */
    .item-tag {
        font-size: 13px;
        color: #666;
        display: flex;
        align-items: center;
    }

        .item-tag i {
            margin-right: 5px;
        }
</style>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const checkboxes = document.querySelectorAll('.checkbox-delete');

        // Add event listeners to each checkbox
        checkboxes.forEach(function (checkbox) {
            checkbox.addEventListener('click', function () {
                if (checkbox.checked) {
                    checkboxes.forEach(function (cb) {
                        cb.style.display = 'block';
                    });
                }
            });
        });
    });
</script>
