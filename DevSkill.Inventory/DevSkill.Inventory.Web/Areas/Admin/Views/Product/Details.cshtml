@model ProductDetailsModel

<div class="col-md-12 details-page">

    <div class="header">
        <div class="left">
            <a href="@Url.Action("Items", "Product")" class="btn-all-items">
                <i class="fas fa-box"></i>
                All Items
            </a>
        </div>
        <div class="right">
            <span class="inserted-date">Inserted on: @Model.CreatedDate.ToString("dd-MMM-yyyy")</span>
        </div>
    </div>

    <div class="title-edit-box">
        <div class="title-edit">
            <div class="left">
                <h2 class="item-title">@Model.Title</h2>
            </div>
            <div class="right">
                <a href="@Url.Action("Update", "Product", new { id = Model.Id })" class="btn-edit">
                    <i class="fas fa-edit"></i>
                    Edit
                </a>
            </div>
        </div>
    </div>

    <div class="info-box">
        <div class="info-part">
            <span class="info-label">Quantity</span>
            <span class="info-value">@Model.Quantity</span>
        </div>
        <div class="info-part">
            <span class="info-label">Min Level</span>
            <span class="info-value">@Model.MinLevel</span>
        </div>
        <div class="info-part">
            <span class="info-label">Price, $</span>
            <span class="info-value">$@Model.Price</span>
        </div>
        <div class="info-part">
            <span class="info-label">Total Value</span>
            <span class="info-value">$@Model.TotalValue</span>
        </div>
    </div>

    <div class="item-details">
        <div class="details-box left">
            <div class="image-container">
                <img src="@Model.Image" alt="@Model.Title" class="item-image" />
            </div>
        </div>
        <div class="details-box right">
            <div class="tags-notes">
                <p><strong>Tags:</strong> @Model.Tags</p>
                <p><strong>Notes:</strong> @Model.Notes</p>
            </div>
        </div>
    </div>

</div>

<style>
    .details-page {
        padding: 20px 0px;
        max-width: 1100px;
        margin: 0 auto;
    }

    .header {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
    }

        .header .btn-all-items {
            color: #333;
            text-decoration: none;
            font-size: 18px;
            display: flex;
            align-items: center;
        }

            .header .btn-all-items i {
                margin-right: 8px;
            }

            .header .btn-all-items:hover {
                color: #dd2a3b;
            }

        .header .inserted-date {
            font-size: 16px;
            color: #888;
        }

    .title-edit-box {
        padding: 20px;
        border-radius: 8px;
        background-color: #fff;
        margin-bottom: 20px;
    }

    .title-edit {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .item-title {
        font-size: 24px;
        font-weight: bold;
        margin: 0;
    }

    .btn-edit {
        background-color: #dd2a3b;
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 8px;
        text-decoration: none;
        font-size: 14px;
    }
    .btn-edit:hover {
        color: #fff;
    }

        .btn-edit i {
            margin-right: 8px; 
        }

    .info-box {
        display: flex;
        justify-content: space-between;
        padding: 10px;
        border-radius: 8px;
        background-color: #fff;
        margin-bottom: 20px;
    }

    .info-part {
        text-align: center;
        flex: 1;
    }

        .info-part:not(:last-child) {
            padding-right: 20px;
        }

        .info-part span {
            display: block;
        }

    .info-label {
        font-size: 14px;
        color: #555;
    }

    .info-value {
        font-size: 18px;
        font-weight: bold;
    }

    .item-details {
        display: flex;
        justify-content: space-between;
    }

    .details-box {
        flex: 1;
        padding: 20px;
        background-color: #fff;
        border-radius: 8px;
        margin-right: 20px;
    }

        .details-box:last-child {
            margin-right: 0;
        }

    .image-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100%;
    }

    .item-image {
        max-width: 100%;
        border-radius: 8px;
    }

    .tags-notes {
        padding: 20px;
    }

        .tags-notes p {
            margin: 10px 0;
        }

        .tags-notes strong {
            font-size: 14px;
            color: #555;
        }

</style>