@model IEnumerable<Product>
@using DevSkill.Inventory.Domain.Entities

@{
    ViewData["Title"] = "Items";
    var newItemId = ViewBag.NewItemId as Guid?;
}

<div class="content-wrapper">
    <div class="row">
        <!-- Sidebar -->
        <aside class="col-md-3">
            <div class="card" style="height: 100vh;">
                <div class="card-body" style="overflow-y: auto;">
                    <form>
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-append">
                                    <span class="input-group-text" id="search-icon">
                                        <i class="fas fa-search"></i>
                                    </span>
                                </div>
                                <input type="text" class="form-control" id="folderSearch" placeholder="Search folders" aria-label="Search folders">
                            </div>
                            <div class="header-border mb-4"></div>
                        </div>
                    </form>

                    <!-- All Items Section -->
                    <div class="all-items">
                        <h5 class="all-items-title" style="cursor: pointer; padding: 10px;">
                            <i class="fas fa-box" style="margin-right: 8px; padding: 5px;"></i> All Items
                        </h5>
                        <div class="sub-folders" style="display: none;">
                            <!-- Initially hidden -->
                        </div>
                    </div>
                </div>
            </div>
        </aside>

        <!-- Main Content -->
        <div class="col-md-9">
            <div class="d-flex justify-content-between align-items-center mb-4" style="margin-top: 30px;">
                <h1 class="items-title">All Items</h1>
                <div class="button-group">
                    <a asp-area="Admin" asp-controller="Product" asp-action="Insert" class="custom-button" style="margin-right: 10px;"> ADD ITEM </a>
                    <a href="#" class="custom-button"> ADD FOLDER </a>
                </div>
            </div>
            <div class="header-border mb-4"></div>

            <!-- Search Bar and Value Fields -->
            <div class="search-and-values" style="margin-bottom: 20px; padding-right: 15px; text-align: left;">
                <form>
                    <div class="input-group" style="display: inline-flex; position: relative; max-width: 300px;">
                        <input type="text" class="form-control" id="folderSearch" placeholder="Search All Items" aria-label="Search folders" style="padding-left: 30px; border-bottom: none;">
                        <div class="input-group-append" style="position: absolute; left: 10px; top: 50%; transform: translateY(-50%); pointer-events: none;">
                            <span class="input-group-text" id="search-icon" style="background: transparent; border: none; padding: 0;">
                                <i class="fas fa-search"></i>
                            </span>
                        </div>
                        <!--Grid icon-->
                        <i class="fas fa-th-large grid-icon" id="gridIcon" style="position: absolute; right: -630px; top: 50%; transform: translateY(-50%); cursor: pointer;"></i>
                    </div>
                </form>

                <!-- Closer Value Fields -->
                <div class="value-fields" style="padding: 10px 0;">
                    <div class="row" style="margin: 0;">
                        <div class="col-md-3 no-padding">
                            <strong>Folders:</strong> <span id="folderCount">0</span>
                        </div>
                        <div class="col-md-3 no-padding">
                            <strong>Items:</strong> <span id="itemCount">0</span>
                        </div>
                        <div class="col-md-3 no-padding">
                            <strong>Total Quantity:</strong> <span id="totalQuantity">0</span>
                        </div>
                        <div class="col-md-3 no-padding">
                            <strong>Total Value:</strong> <span id="totalValue">0 $</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row" style="margin: 0;">
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        var isNewItem = newItemId.HasValue && newItemId == item.Id;

                        <div class="col-md-4 d-flex justify-content-center">
                            <div class="card item-box @if(isNewItem) {<text>new-item-highlight</text>}">
                                <img src="@item.Image" alt="@item.Title" class="card-img-top" />
                                <div class="card-body">
                                    <h5 class="card-title">@item.Title</h5>
                                    <p class="card-text">Quantity: @item.Quantity</p>
                                    <p class="card-text">Price: @item.Price $</p>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p>No items available now.</p>
                }
            </div>
        </div>
    </div>
</div>

<!-- Modal Structure -->
<div id="layoutModal" class="modal-right" style="margin-top:120px;">
    <div class="modal-content" style="border-radius: 5px;">
        <h5>LAYOUT TYPE</h5>
        <div class="layout-options">
            <div class="option"><i class="fas fa-th-large"></i> Grid</div>
            <div class="option"><i class="fas fa-list"></i> List</div>
            <div class="option"><i class="fas fa-table"></i> Table</div>
        </div>
        <hr>
        <h5>VIEW OPTION</h5>
        <div class="view-option">
            <input type="checkbox" id="hideFolders"> Hide folders
        </div>
    </div>
</div>

<style>
    .item-box {
        height: 270px;
        width: 230px;
        margin-bottom: 20px;
        border: 1px solid #ddd;
        border-radius: 8px; 
        overflow: hidden; 
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease-in-out; 
    }

        /* Optional: Add a hover effect */
        .item-box:hover {
            transform: scale(1.05);
        }

        .item-box img {
            height: 150px; 
            width: 100%; 
            object-fit: cover; 
        }

        .item-box .card-body {
            padding: 10px;
        }

        .item-box h5 {
            font-size: 16px; 
            margin-bottom: 8px;
        }

        .item-box p {
            font-size: 14px;
            margin-bottom: 5px;
        }
</style>
