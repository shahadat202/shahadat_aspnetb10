@{
    ViewData["Title"] = "AddItem";
}

<div class="container-fluid">
    <!-- Page Title Section -->
    <div class="page-title">
        <i class="fas fa-box"></i> <!-- Item Icon -->
        <h1>Add Item</h1>
    </div>

    <!-- Input Field Section (Item Name) -->
    <div class="add-item-section">
        <input type="text" placeholder="Item Name*" class="h1-input">
    </div>

    <div class="row">
        <!-- Left Section - Item Details -->
        <div class="col-md-7 item-details-section" style="margin-left: 70px;">
            <h2>ITEM DETAILS</h2>

            <div class="form-row">
                <!-- Quantity and Price -->
                <div class="col-md-6">
                    <label for="quantity" class="input-label">Quantity</label>
                    <input type="text" id="quantity" placeholder="Quantity" class="details-input">
                </div>
                <div class="col-md-6">
                    <label for="price" class="input-label">Price, $</label>
                    <input type="text" id="price" placeholder="Price, $" class="details-input">
                </div>
            </div>
            <div class="form-row">
                <!-- Min Level and Tags -->
                <div class="col-md-6">
                    <label for="minLevel" class="input-label">Min Level</label>
                    <input type="text" id="minLevel" placeholder="Min Level" class="details-input">
                </div>
                <div class="col-md-6">
                    <label for="tags" class="input-label">Tags</label>
                    <input type="text" id="tags" placeholder="Tags" class="details-input">
                </div>
            </div>
            <div class="form-row">
                <!-- Notes -->
                <div class="col-md-12">
                    <label for="notes" class="input-label">Notes</label>
                    <textarea id="notes" placeholder="Notes" class="details-input"></textarea>
                </div>
            </div>
        </div>

        <!-- Right Section - Photos -->
        <div class="col-md-4 photo-section">
            <h2>PHOTOS</h2>
            <div class="photo-box" style="margin-top: 20px;">
                <!-- Added margin for spacing -->
                <label for="photo-input" class="photo-label">
                    <i class="fas fa-camera"></i> Add Photo
                </label>
                <input type="file" id="photo-input" class="photo-input" onchange="showPhoto(event)">
                <img id="preview-photo" src="#" alt="Photo Preview" style="display:none;">
            </div>
        </div>
    </div>

    <!-- Footer Buttons -->
    <div class="footer-buttons">
        <button class="cancel-btn" onclick="cancelForm()">CANCEL</button>
        <button class="add-btn">ADD</button>
    </div>
</div>

<!-- Cancel Modal -->
<div class="modal fade" id="cancelModal" tabindex="-1" role="dialog" aria-labelledby="cancelModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                Discard unsaved changes?
            </div>
            <div class="modal-footer">
                <button type="button" class="cancel-modal-btn" data-dismiss="modal">CANCEL</button>
                <button type="button" class="discard-btn" onclick="goToItemsPage()">DISCARD</button>
            </div>
        </div>
    </div>
</div>
<script>
    // Show the selected photo in the preview box
    function showPhoto(event) {
        var reader = new FileReader();
        reader.onload = function () {
            var output = document.getElementById('preview-photo');
            output.src = reader.result;
            output.style.display = 'block'; // Display the photo
        };
        reader.readAsDataURL(event.target.files[0]);
    }

    // Navigate to the items page on discard
    function goToItemsPage() {
        window.location.href = '/items';
    }
</script>

