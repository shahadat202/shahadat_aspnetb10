{
  "ConnectionStrings": {
    "DefaultConnection": "Server=DESKTOP-N8A2ENF\\SQLEXPRESS; Database=AspnetB10; User Id=aspnetb10; Password=123456; TrustServerCertificate=True; Trusted_Connection=True; MultipleActiveResultSets=true"
    //"LoggingDatabase": "Server=DESKTOP-N8A2ENF\\SQLEXPRESS;Database=AspnetB10;Trusted_Connection=True;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.MSSqlServer"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Warning": "Warning",
        "Error": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "Logs/web-log-.log",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Server=DESKTOP-N8A2ENF\\SQLEXPRESS;Database=AspnetB10;Trusted_Connection=true;TrustServerCertificate=True;MultipleActiveResultSets=true;",
          "sinkOptionsSection": {
            "tableName": "Logs",
            "schemaName": "dbo",
            "autoCreateSqlTable": true
          },
          "columnOptionsSection": {
            "primaryKeyColumnName": "Id",
            "removeStandardColumns": [ "MessageTemplate", "Properties", "LogEvent" ],
            "id": { "nonClusteredIndex": true },
            "timeStamp": { "columnName": "DateTime" }
          }
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
